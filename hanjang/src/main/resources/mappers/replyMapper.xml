<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mycompany.myapp.service.dao.ReplyDAO">

	<resultMap id="ReplyMap" type="com.mycompany.myapp.vo.ReplyVO">
		<id property="replyNo" column="replyno"/>
		<result property="boardNo" column="boardno"/>
		<result property="replyContent" column="replycontent"/>
		<result property="replyWriterId" column="replywriterid"/>
		<result property="replyWriterNick" column="replywriternick"/>
		<result property="regDate" column="regdate"/>
	</resultMap>

	<!-- 댓글 목록 조회 -->
	<select id="getReplyList" resultMap="ReplyMap">
	SELECT * 
	FROM BoardReply r, User u
	WHERE r.replywriterid = u.UserId AND boardno = #{boardNo}
	ORDER BY replyno
	</select>
	
	<!-- 댓글 등록 -->
	<insert id="insertReply">
	INSERT INTO BoardReply (replyno, boardno, replycontent, replyWriterId)
	VALUES (NEXTVAL(hanjang.reply_seq), #{boardno}, #{replyContent}, #{replyWriterId})
	</insert>
	
	<!-- 댓글 수정 -->
	<update id="updateReply">
	UPDATE BoardReply
	SET replycontent = #{replyContent}
	</update>
	
	<!-- 댓글 삭제 -->
	<delete id="deleteReply">
	DELETE FROM BoardReply
	WHERE replyno = #{replyNo}
	</delete>

</mapper>